{
  "compilerOptions": {
    "outDir": "app/js",
    "module": "system",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "jsx": "react-jsx",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop":true,
    "suppressImplicitAnyIndexErrors": true,
    "noEmitOnError": false, 
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true
    
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
  ],
  "types": [
    "typePatches"
  ]
}